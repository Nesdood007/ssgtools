#!/bin/bash
# This read a config File into Standard Out. It will ignore lines prefixed by a '#'

if [ $# -lt 2 ]; then
  echo "Usage:"
  echo "./indexGen File SRC DST"
  echo "SRC and DST are the Source and Destination Directories for the website. File is the Index Location File."
  exit 1
fi

SRC=$(echo $2)
DST=$(echo $3)

echo -e "Source Directory: $SRC \t Destination Directory: $DST"

OUT=""

while read -r line
do
  [[ "$line" = "\#*" ]] && continue
  OUT=$(echo "$OUT $line")
done < "$1"

echo "$OUT"
